<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:padding="24dp"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_permission_explanation"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="Para brindarte una mejor experiencia, necesitaremos acceso a tu ubicación 'Permitir todo el tiempo'. Por favor, habilita el permiso en la configuración de la aplicación."
        android:textSize="20sp"
        android:textColor="@android:color/black" />
    <ImageView
        android:id="@+id/image_permission"
        android:layout_width="wrap_content"
        android:layout_height="272dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_permission_request" />
    <TextView
        android:id="@+id/text_permission_explanation2"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:gravity="center"
        android:text="Puedes regresar de configuración después de habilitar los permisos."
        android:textSize="20sp"
        android:textColor="@android:color/black" />


</LinearLayout>
